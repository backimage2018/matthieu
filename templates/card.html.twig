{% extends "base.html.twig" %}
	
	{# STYLESHEET #}

	{# HEADER #}

	{# NAVIGATION #}
	
	{% block breadcrumb %}
	<!-- BREADCRUMB -->
	<div id="breadcrumb">
		<div class="container">
			<ul class="breadcrumb">
				<li><a href="{{ path('index') }}">Home</a></li>
				<li class="active">Order</li>
			</ul>
		</div>
	</div>
	<!-- /BREADCRUMB -->
	{% endblock %}

	{% block viewCard %}
	<!-- Resume -->
	<div class="container">
    	<div class="col-md-12">
                  <div class="order-summary clearfix">
                    <div class="section-title">
                      <h3 class="title">Order Review</h3>
                    </div>
                    <table class="shopping-cart-table table">
                      <thead>
                        <tr>
                          <th>Product</th>
                          <th></th>
                          <th class="text-center">Price</th>
                          <th class="text-center">Quantity</th>
                          <th class="text-center">Total</th>
                          <th class="text-right"></th>
                        </tr>
                      </thead>
                      <tbody>
                      {% for detail in details %}
                        <tr>
                          <td class="thumb"><img src="{{ detail.lienImage }}" alt=""></td>
                          <td class="details">
                            <a href="{{ path('index') }}">{{ detail.nom }}</a>
                            <ul>
                              <li><span>Size: {{ detail.size }}</span></li>
                              <li><span>Color: {{ detail.color }}</span></li>
                            </ul>
                          </td>
                          <td class="price text-center"><strong>${{ detail.prixActuel }}</strong><br><del class="font-weak"><small>${{ detail.prixAncien }}</small></del></td>
                          <td class="qty text-center"><input class="input" type="number" value="{{ detail.quantite }}"></td>
                          <td class="total text-center"><strong class="primary-color">${{ detail.total }}</strong></td>
                          <td class="text-right"><button class="main-btn icon-btn"><i class="fa fa-close"></i></button></td>
                        </tr>
                     {% endfor %}
                        
                        </tbody>
                      <tfoot>
                        <tr>
                          <th class="empty" colspan="3"></th>
                          <th>SUBTOTAL</th>
                          <th colspan="2" class="sub-total">$97.50</th>
                        </tr>
                        <tr>
                          <th class="empty" colspan="3"></th>
                          <th>SHIPING</th>
                          <td colspan="2">Free Shipping</td>
                        </tr>
                        <tr>
                          <th class="empty" colspan="3"></th>
                          <th>TOTAL</th>
                          <th colspan="2" class="total">$97.50</th>
                        </tr>
                      </tfoot>
                    </table>
                    <div class="pull-right">
                      <button class="primary-btn">Place Order</button>
                    </div>
                  </div>
                </div>
               </div>
	<!-- /Resume -->
	{% endblock %}

