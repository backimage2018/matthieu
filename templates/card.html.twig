{% extends "base.html.twig" %}
	
	{# STYLESHEET #}

	{# HEADER #}

	{# NAVIGATION #}
	
	{% block breadcrumb %}
	<!-- BREADCRUMB -->
	<div id="breadcrumb">
		<div class="container">
			<ul class="breadcrumb">
				<li><a href="{{ path('index') }}">Home</a></li>
				<li class="active">Order</li>
			</ul>
		</div>
	</div>
	<!-- /BREADCRUMB -->
	{% endblock %}

	{% block viewCard %}
	<!-- Resume -->
	<div class="container">
    	<div class="col-md-12">
                  <div class="order-summary clearfix">
                    <div class="section-title">
                      <h3 class="title">Order Review</h3>
                    </div>
                    <table class="shopping-cart-table table">
                      <thead>
                        <tr>
                          <th>Product</th>
                          <th></th>
                          <th class="text-center">Price</th>
                          <th class="text-center">Quantity</th>
                          <th class="text-center">Recalculate</th>
                          <th class="text-center">Total</th>
                          <th class="text-right"></th>
                        </tr>
                      </thead>
                      <tbody>
                      {% set total = 0 %}
                      {% for caddie in product %}
                      {% set total = total + caddie.product.prixActuel * caddie.quantity %}
                        <tr>
                          <td class="thumb"><img src="/img/{{ caddie.product.image.url }}" alt=""></td>
                          <td class="details">
                            <a href="{{ path('index') }}">{{ caddie.product.nomdelarticle }}</a>
                          </td>
                          <td class="price text-center"><strong>$ {{ caddie.product.prixActuel }}</strong><br>{% if caddie.product.prixAvant is not null %}<del class="font-weak"><small>$ {{ caddie.product.prixAvant }}</small></del></td>{% endif %}
                          <td class="qty text-center"><input id="inputEditProduct_{{ caddie.product.id }}" class="input" min="1" type="number" value="{{ caddie.quantity }}"></td>
                          <td class="text-center"><button data-product_id="{{ caddie.product.id }}" class="main-btn icon-btn editProductCaddie"><i class="fa fa-edit"></i></button></td>
                          <td class="total text-center"><strong class="primary-color">${{ caddie.product.prixActuel * caddie.quantity }}</strong></td>
                          <td class="text-right"><button data-product_id="{{ caddie.product.id }}" class="main-btn icon-btn removeProductCaddie"><i class="fa fa-close"></i></button></td>
                        </tr>
                     {% endfor %}
                        
                        </tbody>
                      <tfoot>
                        <tr>
                          <th class="empty" colspan="3"></th>
                          <th>SUBTOTAL</th>
                          <th colspan="2" class="sub-total">{{ total }}$</th>
                        </tr>
                        <tr>
                          <th class="empty" colspan="3"></th>
                          <th>SHIPING</th>
                          <td colspan="2">Free Shipping</td>
                        </tr>
                        <tr>
                          <th class="empty" colspan="3"></th>
                          <th>TOTAL</th>
                          <th colspan="2" class="total">{{ total }}$</th>
                        </tr>
                      </tfoot>
                    </table>
                    <div class="pull-right">
                      <button class="primary-btn">Place Order</button>
                    </div>
                  </div>
                </div>
               </div>
	<!-- /Resume -->
	{% endblock %}

