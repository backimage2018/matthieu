{% extends "base.html.twig" %}
	
	{# STYLESHEET #}

	{# HEADER #}

	{# NAVIGATION #}
	
	{% block breadcrumb %}
	<!-- BREADCRUMB -->
	<div id="breadcrumb">
		<div class="container">
			<ul class="breadcrumb">
				<li><a href="#">Home</a></li>
				<li class="active">Login & Sign in</li>
			</ul>
		</div>
	</div>
	<!-- /BREADCRUMB -->
	{% endblock %}

	{% block user %}
	<!-- section -->
    <div class="section">
      <!-- container -->
      <div class="container">
        <!-- row -->
        <div class="row">  	
            <div class="col-md-6">
                <form action="{{ path('login') }}" method="post" class="clearfix">
    				<div class="billing-details">
                    <div class="section-title">
                      <h3 class="title">Login</h3>
                    </div>
                    <div class="form-group">
                      <input class="input" id="username" type="text" name="_username" value="{{ last_username }}" placeholder="Enter your username">
                    </div>
                    <div class="form-group">
                    	<input class="input" type="password" id="password" name="_password" placeholder="Enter your password">
                    </div>
                    <div class="pull-right">
                      <button type="submit" class="primary-btn">Connect</button>
                    </div>
                    {% if error %}
                    	<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                  </div>
    			</form>
			</div>
		
        </div>
        <!-- /row -->
      </div>
      <!-- /container -->
    </div>
    <!-- /section -->
	{% endblock %}

